
@using ComeTogether.Domain.Entities
@using System.Linq
@model IEnumerable<ApplicationUser>


    <link rel="stylesheet" href="~/css/Account.min.css" />


<section class="nobg2">
    <div>


        @foreach (ApplicationUser user in Model)
        {

            <figure class="snip1336">
                <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/331810/sample87.jpg" alt="sample87" />
                <figcaption>

                    @{
                        if (@user.Photo != null)
                        {
                            var base64 = Convert.ToBase64String(@user.Photo);
                            var imagesrc = string.Format("data:image/jpeg;base64,{0}", base64);

                            <img src="@imagesrc" alt="" class="profile" />
                        }
                        else
                        {


                            <img src="~/Resource/thuan-pham-1Kj0OZiwLN8-unsplash.jpg" alt="" class="profile" />

                        }
                    }                         <h2>@user.UserName<span>@user.Position</span></h2>
                    <p>@user.Info </p>

                    <a href="@Url.Action("AnotherOneUserProfile", "Account", new { id = user.Id })" class="info">
                       ViewMore
                    </a>
                </figcaption>
            </figure>



        }
    </div>
</section>