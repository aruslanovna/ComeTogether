<link rel="stylesheet" href="~/css/Index.css" />
<section class="newsletter">

    <div class="newsletter__form col-sm-12 ">
        <img class="newsletter__icon icon-n" src="https://www.freepnglogos.com/uploads/email-logo-png-27.png" />

        <form asp-action="EmailUser" method="get" defaultbutton="SubmitButton" runat="server">
            <input class="newsletter__input" name="Content" type="text" placeholder=Message>
            <label  name="mail" type="text" style="display:none">@ViewBag.mail</label>
            <button class="newsletter__button" type="submit">Send message</button>
        </form>
    </div>


</section>