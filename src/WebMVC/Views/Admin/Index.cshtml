<div class="panel panel-primary">
    <div class="panel-heading">
        "Accounts"
    </div>
    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>"Name"</th>
            <th>"Email"</th>
            <th></th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">"NoAccounts"</td>
            </tr>
        }
        else
        {
            foreach (ApplicationUser user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>

                        @Html.ActionLink("Edit", "Edit", new { id = user.Id },
                            new { @class = "btn btn-primary btn-xs", style = "float: left; margin-right: 10px" })

                        @Html.ActionLink("Delete", "Delete", new { id = user.Id },
                            new { @class = "btn btn-danger btn-xs" , style = "float: left; margin-right: 1em" })


                    </td>
                </tr>
            }
        }
    </table>
</div>
