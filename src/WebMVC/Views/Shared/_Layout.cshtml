                        </svg>
                        <span class="greyFont"> @Localizer["AllProjects"]</span>
                    </div>
                </a>

                <a asp-controller="Articles" asp-action="Index">
                    <div class="navigation__item " data-target-ref="archive">
                        <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="archive" class="svg-inline--fa fa-archive fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M32 448c0 17.7 14.3 32 32 32h384c17.7 0 32-14.3 32-32V160H32v288zm160-212c0-6.6 5.4-12 12-12h104c6.6 0 12 5.4 12 12v8c0 6.6-5.4 12-12 12H204c-6.6 0-12-5.4-12-12v-8zM480 32H32C14.3 32 0 46.3 0 64v48c0 8.8 7.2 16 16 16h480c8.8 0 16-7.2 16-16V64c0-17.7-14.3-32-32-32z"></path></svg> <span class="greyFont">@Localizer["News"]</span>
                    </div>
                </a>


                <a asp-controller="Projects" asp-action="MyProjects">
                    <div class="navigation__item " data-target-ref="project">

                        <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="folder-plus" class="svg-inline--fa fa-folder-plus fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M464 128H272l-64-64H48C21.49 64 0 85.49 0 112v288c0 26.51 21.49 48 48 48h416c26.51 0 48-21.49 48-48V176c0-26.51-21.49-48-48-48zm-96 168c0 8.84-7.16 16-16 16h-72v72c0 8.84-7.16 16-16 16h-16c-8.84 0-16-7.16-16-16v-72h-72c-8.84 0-16-7.16-16-16v-16c0-8.84 7.16-16 16-16h72v-72c0-8.84 7.16-16 16-16h16c8.84 0 16 7.16 16 16v72h72c8.84 0 16 7.16 16 16v16z"></path></svg> <span class="greyFont">@Localizer["MyProjects"]</span>

                    </div>
                </a>
                    
            </div>
        </div>
        <div class="mainWindow__rightSide">
            <div class="topbar">
                <div class="topbar-left">

                    @await Html.PartialAsync("_SelectLanguagePartial")
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <a href="/Projects/Create">
                            <button class="iconBtn" id="createProjectBtn">
                                <div class="iconBtn__content">
                                    <div class="icon">
                                        <svg aria-hidden="true" focusable="false" style=" vertical-align: baseline;" data-prefix="fas" data-icon="plus" class="svg-inline--fa fa-plus fa-w-14" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                                            <path fill="currentColor" d="M416 208H272V64c0-17.67-14.33-32-32-32h-32c-17.67 0-32 14.33-32 32v144H32c-17.67 0-32 14.33-32 32v32c0 17.67 14.33 32 32 32h144v144c0 17.67 14.33 32 32 32h32c17.67 0 32-14.33 32-32V304h144c17.67 0 32-14.33 32-32v-32c0-17.67-14.33-32-32-32z"></path>
                                        </svg>
                                    </div>
                                    @Localizer["NewProject"]
                                </div>
                            </button>
                        </a>

                        <a href="/Articles/Create">
                            <button class="iconBtn" id="createProjectBtn">
                                <div class="iconBtn__content">
                                    <div class="icon">
                                        <svg aria-hidden="true" focusable="false" style=" vertical-align: baseline;" data-prefix="fas" data-icon="plus" class="svg-inline--fa fa-plus fa-w-14" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                                            <path fill="currentColor" d="M416 208H272V64c0-17.67-14.33-32-32-32h-32c-17.67 0-32 14.33-32 32v144H32c-17.67 0-32 14.33-32 32v32c0 17.67 14.33 32 32 32h144v144c0 17.67 14.33 32 32 32h32c17.67 0 32-14.33 32-32V304h144c17.67 0 32-14.33 32-32v-32c0-17.67-14.33-32-32-32z"></path>
                                        </svg>
                                    </div>
                                    @Localizer["NewArticle"]
                                </div>
                            </button>
                        </a>
                        <a href="http://localhost:8080/Create/Index">
                            <button class="iconBtn" id="createProjectBtn">
                                <div class="iconBtn__content">
                                    <div class="icon">
                                        <svg aria-hidden="true" focusable="false" style=" vertical-align: baseline;" data-prefix="fas" data-icon="plus" class="svg-inline--fa fa-plus fa-w-14" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                                            <path fill="currentColor" d="M416 208H272V64c0-17.67-14.33-32-32-32h-32c-17.67 0-32 14.33-32 32v144H32c-17.67 0-32 14.33-32 32v32c0 17.67 14.33 32 32 32h144v144c0 17.67 14.33 32 32 32h32c17.67 0 32-14.33 32-32V304h144c17.67 0 32-14.33 32-32v-32c0-17.67-14.33-32-32-32z"></path>
                                        </svg>
                                    </div>
                                    @Localizer["CreateVoting"]
                                </div>
                            </button>
                        </a>
                    }
                </div>
                <div class="topbar-right">
                    <div class="notificationBell">
                        <img src="https://img.icons8.com/plasticine/32/000000/appointment-reminders.png" />
                        <div class="notificationBell__value"></div>
                    </div>
                    <button class="darkModeBtn">
                        <img src="https://img.icons8.com/cotton/64/000000/light-switch--v1.png" />

                    </button>
                    <div class="profile">
                        <div class="profile__information">
                            <partial name="_LoginPartial" />

                        </div>
                    </div>
                </div>
            </div>
            <div class="content">
                <br><br><br><br>

                @RenderBody()

            </div>

        </div>
    </div>


    <div class="modalWindow modalWindow--inactive">
        <div class="closeModal"></div>

        <div class="notificationBar notificationBar--inactive">
            <h2 class="blackFont">
                @Localizer["Notification"]
            </h2>
            <div class="notificationBox newNotification">

                <div class="notificationBox newNotification">

                    <div class="content__row madeInBamberg">



                        <!--Ссылка на автоматически сгенерированный скрипт хаба SignalR -->

                        <div id="loginBlock">
                            @Localizer["ToChat"]<br />
                            <input class="chat" id="userName" type="text" />
                            <input class="chat" id="loginBtn" type="button" value=@Localizer["Enter"] />
                        </div><br />

                        <div id="header"></div><br />

                        <div id="inputForm">
                            <input class="chat" type="text" id="message" />
                            <input class="chat" type="button" id="sendBtn" value=@Localizer["Send"] />
                        </div>
                        <div id="chatroom"></div>


                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/signalRbundle.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>


