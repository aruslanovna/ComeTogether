@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using System.Text.Encodings.Web
<link rel="stylesheet" href="~/css/Expenses.css" />
@model List<ComeTogether.Domain.Entities.BudgetWithTaxesAndCharity>

    <div id="invoiceholder">

        <div id="headerimage"></div>
        <div id="invoice" class="effect2">

            <div id="invoice-top">
                <div class="logo"></div>
                <div class="info">
                    <h2>ComeTogether</h2>
                    <p>
                        hello@michaeltruong.ca </br>
                        289-335-6503
                    </p>
                </div><!--End Info-->
                <div class="title">
                    <h1>Finance manager</h1>
                    <p>
                        Budget With Taxes And Charity</br>

                    </p>
                </div><!--End Title-->
            </div><!--End InvoiceTop-->



            <div id="invoice-mid">

                <div class="clientlogo"></div>
                <div class="info">
                    <h2>Cafe</h2>
                    <p>
                        @Model[0].ProjectName</br>
                        555 - 555 - 5555</br>
                </div>

                <div id="project">
                    <h2>Project Description</h2>
                    <p>Proin cursus, dui non tincidunt elementum, tortor ex feugiat enim, at elementum enim quam vel purus. Curabitur semper malesuada urna ut suscipit.</p>
                </div>

            </div><!--End Invoice Mid-->
            @foreach (var mod in Model)
            {
                <div id="invoice-bot">

                    <div id="table">
                        <table>
                            <tr class="tabletitle">
                                <td class="item"><h2>FullCharity</h2></td>
                                <td class="Hours"><h2>FullBill</h2></td>
                                <td class="Rate"><h2>FullDutyMoney</h2></td>
                                <td class="subtotal"><h2>Initial_budget</h2></td>
                                <td class="subtotal"><h2>Result_For_This_Month</h2></td>
                            </tr>

                            <tr class="service">
                                <td class="tableitem"><p class="itemtext"> @mod.FullCharity</p></td>
                                <td class="tableitem"><p class="itemtext">@mod.FullBill</p></td>
                                <td class="tableitem"><p class="itemtext">@mod.FullDutyMoney</p></td>
                                <td class="tableitem"><p class="itemtext">@mod.Initial_budget</p></td>
                                <td class="tableitem"><p class="itemtext">@mod.Result_For_This_Month</p></td>
                            </tr>



                            @*<tr class="tabletitle">
                            <td></td>
                            <td></td>
                            <td class="Rate"><h2>Total</h2></td>
                            <td class="payment"><h2></h2></td>
                        </tr>*@

                        </table>
                    </div><!--End Table-->

                    <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
                        <input type="hidden" name="cmd" value="_s-xclick">
                        <input type="hidden" name="hosted_button_id" value="QRZ7QTM9XRPJ6">
                        <input type="image" src="http://michaeltruong.ca/images/paypal.png" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
                    </form>


                    <div id="legalcopy">
                        <p class="legal">
                            <strong>Thank you for your business!</strong>  Payment is expected within 31 days; please process this invoice within that time. There will be a 5% interest charge per month on late invoices.
                        </p>
                    </div>

                </div><!--End InvoiceBot-->
            }
        </div><!--End Invoice-->
    </div><!-- End Invoice Holder-->