@page
@model RegisterModel
<link rel="stylesheet" href="~/css/Login.css" />


<div class="containerLog" id="container">
    <div class="form-container sign-in-container">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" >
            <h1>Create Account</h1>
           

            <input type="email" placeholder="Email" asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
            <input type="password" placeholder="Password" asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <input type="password" placeholder="Password Confirm" asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            <button>Sign Up</button>
        </form>
    </div>

    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-right" class="account">
                <h1>Welcome Back!</h1>
                <p>To keep connected with us please login with your personal info</p>
                <a href="/Identity/Account/Login" class="ghost" id="signIn">Sign In </a>
            </div>

        </div>
    </div>
</div>






